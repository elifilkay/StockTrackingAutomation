@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Yeni Satış Ekle";
}

<h2>Yeni Satış Ekle</h2>

@using (Html.BeginForm("Ekle", "Satis", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Müşteri:</label>
        @Html.DropDownList("MusteriId", ViewBag.Musteriler as SelectList, "-- Müşteri Seç --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Ürün:</label>
        @Html.DropDownList("UrunId", ViewBag.Urunler as SelectList, "-- Ürün Seç --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Miktar:</label>
        @Html.TextBox("Miktar", null, new { @class = "form-control", type = "number" })
    </div>

    <button type="submit" class="btn btn-success">Satış Kaydet</button>
}
