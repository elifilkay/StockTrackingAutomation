@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<StockTrackingAutomation.Models.Kategoriler>

@{
    ViewBag.Title = "Kategoriler";
}

<!-- Sayfa içeriğini saran ana container -->
<div class="full-page">
    <div class="content-container">
        <!-- Sayfa başlığı -->
        <h2 class="text-center mb-4">Kategoriler</h2>

        <!-- Yeni kategori ekleme butonu -->
        <p class="text-center mb-4">
            @Html.ActionLink("Yeni Kategori Ekle", "Ekle", null, new { @class = "btn btn-sm btn-success rounded-pill text-white shadow" })
        </p>

        <!-- TempData mesajları -->
        <div class="message-container">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger fadeIn">
                    @TempData["ErrorMessage"]
                </div>
            }
            else if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success fadeIn">
                    @TempData["SuccessMessage"]
                </div>
            }
        </div>

        <!-- Kategoriler Tablosu -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered mt-4">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">KATEGORİ ADI</th>
                        <th class="text-center">İŞLEMLER</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.KategoriAd)</td>
                            <td class="text-center">
                                <!-- Düzenle Butonu -->
                                @Html.ActionLink("Düzenle", "Guncelle", new { id = item.KategoriId }, new { @class = "btn btn-warning btn-sm rounded-pill text-white mr-2" })
                                <!-- Sil Butonu -->
                                @Html.ActionLink("Sil", "Sil", new { id = item.KategoriId }, new { @class = "btn btn-danger btn-sm rounded-pill text-white" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Sayfanın alt kısmına mesajların yerleştirileceği alan -->
<style>
    /* Sayfa tamamen ortalanacak şekilde */
    /* Sayfa tamamen ortalanacak şekilde */
    .full-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f4f7fa;
    }

    /* İçerik alanı, tüm bileşenleri saran bölüm */
    .content-container {
        width: 100%;
        max-width: 900px;
        padding: 20px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }

    .text-center {
        text-align: center;
    }

    .message-container {
        position: fixed;
        bottom: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 9999;
        width: 80%;
        max-width: 500px;
        transition: opacity 0.5s ease-out;
    }

    .alert {
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 5px;
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        opacity: 0;
    }

    .alert-success {
        background-color: #28a745;
        color: white;
    }

    .alert-danger {
        background-color: #dc3545;
        color: white;
    }

    .fadeIn {
        opacity: 1;
    }

    /* Butonlar */
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        color: white;
        font-size: 14px;
        padding: 8px 16px;
        text-transform: uppercase;
        font-weight: bold;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, transform 0.3s ease-in-out;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: translateY(-2px);
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: white;
        font-size: 16px;
        padding: 8px 16px;
        font-weight: bold;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, transform 0.3s ease-in-out;
    }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
            transform: translateY(-2px);
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
        font-size: 16px;
        padding: 8px 16px;
        font-weight: bold;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s, transform 0.3s ease-in-out;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            transform: translateY(-2px);
        }

    .btn-sm {
        padding: 6px 12px;
        font-size: 14px;
    }

    .rounded-pill {
        border-radius: 50px;
    }

    /* Tablo düzeni ve başlıkları */
    .table {
        margin-top: 20px;
        width: 100%;
    }

        .table th, .table td {
            text-align: center;
            padding: 5px 10px; /* Kategori ve İşlemler arasındaki mesafeyi kısaltmak için padding değeri */
        }

        .table th {
            padding-bottom: 5px; /* Başlık ile içerik arasındaki mesafeyi azaltıyoruz */
            text-transform: uppercase; /* Başlıkları büyük harf yapıyoruz */
            text-decoration: underline; /* Başlıkları altını çiziyoruz */
            font-weight: bold;
        }

        .table td {
            padding: 5px 10px; /* Hücrelerin arası daha dar */
        }

    /* Sil ve Düzenle butonlarına biraz mesafe ekliyoruz */
    .btn-warning, .btn-danger {
        margin-right: 10px;
    }

    table {
        margin-bottom: 30px;
    }

    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
