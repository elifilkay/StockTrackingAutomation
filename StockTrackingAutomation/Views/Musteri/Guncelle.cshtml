@model StockTrackingAutomation.Models.Musteriler

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Müşteri Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.MusteriId) <!-- Müşteri ID'sini gizli tutuyoruz -->

    <div class="form-group">
        @Html.LabelFor(m => m.Ad)
        @Html.TextBoxFor(m => m.Ad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Soyad)
        @Html.TextBoxFor(m => m.Soyad, new { @class = "form-control" })
    </div>



    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("Index", "Musteri")" class="btn btn-secondary">Geri</a>
}